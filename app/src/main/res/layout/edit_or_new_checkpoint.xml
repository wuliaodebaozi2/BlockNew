<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/my_checkpoint_name_listview_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_checkpoint_name_listview_head"/>

        <TextView
            android:id="@+id/checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ListView
            android:id="@+id/my_checkpoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_background">

        </ListView>

        <Button
            android:id="@+id/edit_checkpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_checkpoint"/>

        <Button
            android:id="@+id/new_checkpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/new_checkpoint"/>

    </AbsoluteLayout>

</android.support.constraint.ConstraintLayout>