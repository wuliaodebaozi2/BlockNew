<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <EditText
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="238dp"
            android:layout_y="92dp"
            android:hint="请输入您的用户名"
            android:imeOptions="flagNoExtractUi"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="238dp"
            android:layout_y="174dp"
            android:hint="请输入您的密码"
            android:password="true"
            android:imeOptions="flagNoExtractUi"/>

        <Button
            android:id="@+id/Login1"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_x="138dp"
            android:layout_y="268dp"
             />

        <Button
            android:id="@+id/register"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_x="379dp"
            android:layout_y="262dp"
             />

        <ImageView
            android:id="@+id/userImg"
            android:layout_width="48dp"
            android:layout_height="100px"
            android:layout_x="279dp"
            android:layout_y="12dp"
            android:src="@drawable/image_style"/>
    </AbsoluteLayout>




</LinearLayout>
